---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: helm-wrapper
  namespace: default

---
kind: ClusterRole
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: helm-wrapper
rules:
- apiGroups: ["helm.fluxcd.io"]
  resources: ["helmreleases"]
  verbs: ["*"]

---
kind: ClusterRoleBinding
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: helm-wrapper
subjects:
- kind: ServiceAccount
  name: helm-wrapper
  namespace: default
roleRef:
  kind: ClusterRole
  name: helm-wrapper
  apiGroup: rbac.authorization.k8s.io